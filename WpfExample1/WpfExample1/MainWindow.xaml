<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="282" Width="460">
    <Grid>
        <DockPanel Background="LightBlue">
            <Button DockPanel.Dock="Left" FontSize="20" Content="Left" Background="Wheat" />
            <Button DockPanel.Dock="Top" FontSize="20" Content="Top" Background="Yellow" />
            <Button DockPanel.Dock="Right" FontSize="20" Content="Right" Background="Wheat" />
            <Button DockPanel.Dock="Bottom" FontSize="20" Content="Bottom" Background="Yellow" />
            <Button FontSize="20" Content="Fill" Background="Wheat" />
        </DockPanel>
    </Grid>
</Window>
