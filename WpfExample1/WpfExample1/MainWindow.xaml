<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button HorizontalAlignment="Left" Background="Yellow" FontSize="22">Left</Button>
            <Button HorizontalAlignment="Center" Background="Yellow" FontSize="22">Center</Button>
            <Button HorizontalAlignment="Right" Background="Yellow" FontSize="22">Right</Button>
            <Button HorizontalAlignment="Stretch" Background="Yellow" FontSize="22">Stretch</Button>
        </StackPanel>
    </Grid>
</Window>
