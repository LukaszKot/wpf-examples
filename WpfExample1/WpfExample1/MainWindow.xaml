<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Height="75" Background="Orange" Grid.Row="0">
            <Button Visibility="Collapsed">Collapsed Button</Button>
            <Button >This button is below collapsed button</Button>
        </StackPanel>
        <StackPanel Height="75" Background="Orange" Grid.Row="1">
            <Button Visibility="Hidden">Hidden Button</Button>
            <Button >This button is below hidden button</Button>
        </StackPanel>
    </Grid>
</Window>
