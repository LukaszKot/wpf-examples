<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button VerticalAlignment="Top" Background="Yellow" FontSize="22">Top</Button>
            <Button VerticalAlignment="Center" Background="Yellow" FontSize="22">Center</Button>
            <Button VerticalAlignment="Bottom" Background="Yellow" FontSize="22">Bottom</Button>
            <Button VerticalAlignment="Stretch" Background="Yellow" FontSize="22">Stretch</Button>
        </DockPanel>
    </Grid>
</Window>
