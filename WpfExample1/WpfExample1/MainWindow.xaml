<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Width="75" Background="Orange" >No scaling</Button>
            <Button Width="75" Background="BurlyWood">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="2"/>
                </Button.RenderTransform>
                Scale 2
            </Button>
            <Button Width="75" Background="Orange" >
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="3"/>
                </Button.RenderTransform>
                Scale 1.5/3
            </Button>
        </StackPanel>
    </Grid>
</Window>
